<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_c2"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_title"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:textColor="@color/login_title_text"
            android:textSize="@dimen/login_title_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_height="0dp">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="2.64">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@mipmap/login_bg"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/login_item_paddingLeft"
                    android:paddingRight="@dimen/login_item_paddingRight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/login_name"
                        android:textSize="@dimen/text_size_f1"
                        android:textColor="@color/color_c5"/>

                    <EditText
                        android:id="@+id/input_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_c5"
                        android:layout_marginLeft="@dimen/login_editText_marginLeft"
                        android:maxLines="1"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_f1"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/login_item_paddingLeft"
                    android:paddingRight="@dimen/login_item_paddingRight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/login_password"
                        android:textSize="@dimen/text_size_f1"
                        android:textColor="@color/color_c5"/>

                    <EditText
                        android:id="@+id/input_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_c5"
                        android:layout_marginLeft="@dimen/login_editText_marginLeft"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/text_size_f1"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.83">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.17"
                    android:paddingLeft="@dimen/login_item_paddingLeft"
                    android:paddingRight="@dimen/login_item_paddingRight">

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="@dimen/login_button_width"
                        android:layout_height="match_parent"
                        android:text="@string/login_login"
                        android:background="@drawable/login_button_selector"
                        android:textColor="@color/color_c3"
                        android:textSize="@dimen/text_size_f1"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3">

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_shadow"
            android:layout_centerHorizontal="true">

        </ImageView>
    </RelativeLayout>
</LinearLayout>


