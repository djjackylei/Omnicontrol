<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    android:layout_marginBottom="@dimen/scene_item_marginBottom"
    android:layout_marginTop="@dimen/scene_item_marginTop"
    android:layout_marginLeft="@dimen/scene_item_marginLeft"
    android:layout_marginRight="@dimen/scene_item_marginRight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/scene_item_height">

        <TextView
            android:id="@+id/id"
            android:layout_width="@dimen/scene_id_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/edit_hint_color"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.CardView>