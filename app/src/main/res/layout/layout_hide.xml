<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/term_hide_width"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/term_button_black_color">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="@dimen/term_hide_icon_width"
                    android:layout_height="@dimen/term_hide_icon_height"
                    android:scaleType="fitXY"
                    android:src="@mipmap/black"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/term_black"
                    android:layout_marginTop="@dimen/term_hide_text_marginTop"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_c1"
                    android:textSize="@dimen/text_size_f3"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/term_button_mute_color"
            android:gravity="center"
            android:text="设置\n静音"/>

        <RelativeLayout
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/term_button_hangup_color"
            android:gravity="center"
            android:text="踢除\n终端"/>
    </LinearLayout>
</LinearLayout>