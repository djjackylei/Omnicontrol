<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <cn.diaovision.omnicontrol.widget.CircleCharView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/port_circle"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/port_circle"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/ItemTitleText"
        android:id="@+id/port_alias"/>
    <cn.bingoogolapple.badgeview.BGABadgeImageView
        android:id="@+id/port_image"
        android:layout_width="@dimen/badge_width"
        android:layout_height="@dimen/badge_height"
        app:badge_verticalMargin="@dimen/badge_verticalMargin"
        app:badge_horizontalMargin="@dimen/badge_horizontalMargin"
        app:badge_textSize="@dimen/badge_textSize"
        app:badge_padding="@dimen/badge_padding"
        app:badge_borderWidth="@dimen/badge_borderWidth"/>
</RelativeLayout>