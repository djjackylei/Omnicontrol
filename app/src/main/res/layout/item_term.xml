<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <cn.diaovision.omnicontrol.widget.SlidingItemView
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/term_slide_marginTop"
        android:layout_marginBottom="@dimen/term_slide_marginBottom"
        android:layout_height="@dimen/term_slide_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/image"
                android:layout_width="@dimen/term_image_width"
                android:layout_height="match_parent"
                android:text="辅助屏"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/edit_hint_color"
                android:background="@color/color_c3"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_c2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/speech"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/mute"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </cn.diaovision.omnicontrol.widget.SlidingItemView>
</RelativeLayout>
