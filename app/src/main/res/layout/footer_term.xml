<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/term_slide_marginTop"
        android:layout_marginBottom="@dimen/term_slide_marginBottom"
        android:layout_height="@dimen/term_slide_height"
        android:background="#f00">

            <TextView
                android:id="@+id/image"
                android:layout_width="@dimen/term_image_width"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="40sp"
                android:gravity="center"
                android:textColor="@color/edit_hint_color"
                android:background="@color/color_c3"/>
    </LinearLayout>
</LinearLayout>