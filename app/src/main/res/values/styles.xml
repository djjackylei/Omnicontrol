<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--bottom navigation bar-->
    <style name="BottomTabText" parent="AppCompatTextView">
        <item name="android:textSize">@dimen/txt_tab_size</item>
    </style>

    <!--bottom navigation bar-->
    <style name="PannelTitleText" parent="AppCompatTextView">
        <item name="android:textSize">@dimen/txt_tab_size</item>
        <item name="android:textColor">@color/panel_title_text</item>
    </style>

    <!--item title text-->
    <style name="ItemTitleText" parent="AppCompatTextView">
        <item name="android:textSize">@dimen/txt_tab_size</item>
        <item name="android:textColor">@color/text_body_light</item>
    </style>

    <style name="ItemTitleTextSmall" parent="AppCompatTextView">
        <item name="android:textSize">@dimen/txt_tab_size_small</item>
        <item name="android:textColor">@color/text_body_light</item>
    </style>

    <!--textview-->
    <style name="AppCompatTextView">
        <item name="android:textColor">@color/text_body_light</item>
    </style>

    <!--navigation radio button style-->
    <style name="NavigationRadioButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">@dimen/navigation_image_paddingLeft</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_f2</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/navigation_text_selector</item>
        <item name="android:background">@drawable/navigation_button_bg_selector</item>
    </style>

    <!--navigation radio button gap-->
    <style name="NavigationButtonGap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@mipmap/nav_gap</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!--dialog style-->
    <style name="dialog" parent="android:Theme.Material.Dialog.NoActionBar">
    </style>

    <!--camera direction control button style-->
    <style name="CameraDirectionButton">
        <item name="android:layout_width">@dimen/camera_control_direction_width</item>
        <item name="android:layout_height">@dimen/camera_control_direction_height</item>
    </style>

    <!--camera play control button style-->
    <style name="CameraPlayButton">
        <item name="android:layout_width">@dimen/camera_control_button_width</item>
        <item name="android:layout_height">@dimen/camera_control_button_height</item>
    </style>

    <!--camera play control text style-->
    <style name="CameraPlayText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/color_c3</item>
        <item name="android:textSize">@dimen/text_size_f4</item>
        <item name="android:layout_marginTop">@dimen/camera_control_text_marginTop</item>
    </style>
</resources>
